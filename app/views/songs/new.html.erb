<h1>Create a Song</h1>

<%= form_for @song  do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

   <input name="song[note_contents][]" placeholder="add note here" id="song_notes_1">
  <input name="song[note_contents][]" placeholder="add note here" id="song_notes_2">
  <input name="song[note_contents][]" placeholder="add note here" id="song_notes_3">
  <input type="submit" value="Submit">
  <br />

  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name  %>

  <%= f.submit %>
<% end %>

